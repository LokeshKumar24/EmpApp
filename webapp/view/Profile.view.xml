		<footer>
			<m:OverflowToolbar>
				<m:ToolbarSpacer/>
				<m:Button type="Emphasized" text="Send" icon="sap-icon://email" press="onRequest"/>
				<m:Button type="Default" visible="false"/>
			</m:OverflowToolbar>
		</footer>
	</ObjectPageLayout>
