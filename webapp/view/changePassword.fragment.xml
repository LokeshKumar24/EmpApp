<core:FragmentDefinition xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core">
	<Dialog  title="ChangePassword" >
		<form:SimpleForm >
			<form:content>
                <Label text="EmployeeId" ></Label>
                <Input  placeholder="Enter Your Employee Id"   value="{ch>/id}"></Input>
                <Label text="New Password" ></Label>
                <Input  placeholder="Enter Your new Password"  value="{ch>/newPass}" ></Input>
                <Label text="Confirm Password" ></Label>
                <Input  placeholder="Confirm Your Password" value="{ch>/confPass}"></Input>
                <Label/>
                <Button text="Submit" press="newPassword" type="Accept"></Button>
                <Button text="close" icon="sap-icon://decline" press="onClose" type="Reject"></Button>
    		</form:content>
		</form:SimpleForm>
	</Dialog>
</core:FragmentDefinition>